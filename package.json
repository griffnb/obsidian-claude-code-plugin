{
  "name": "obsidian-claude-code-plugin",
  "version": "1.0.0",
  "description": "Claude Code integration for Obsidian",
  "main": "main.js",
  "scripts": {
    "build:css": "npx postcss src/styles.css -o build/styles.css",
    "dev": "concurrently \"node esbuild.config.mjs\" \"npx postcss src/styles.css -o build/styles.css --watch\"",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && npm run build:css",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "autoprefixer": "^10.4.22",
    "builtin-modules": "3.3.0",
    "concurrently": "^9.2.1",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.18",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0"
  }
}
